<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="920" d:DesignHeight="680"
        x:Class="NasBackupApp.Views.MainWindow"
        Title="Backup Manager"
        Width="920" Height="680"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="40,32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- App Title and Current Config -->
            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock Classes="HeaderLarge" Text="Backup Manager"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Classes="SecondaryText" Text="Configuration:" VerticalAlignment="Center"/>
                    <TextBlock Name="CurrentConfigTextBlock"
                               Classes="BodyText"
                               Text="None"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>

            <!-- Settings Button -->
            <Button Name="SettingsButton"
                    Grid.Column="1"
                    Classes="IconButton"
                    VerticalAlignment="Top"
                    Padding="16,10">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="⚙" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Text="Settings" FontSize="14" FontWeight="Medium" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Configuration Status Card -->
        <Border Grid.Row="1"
                Classes="CardStyle"
                Margin="0,0,0,24"
                Padding="24,20">
            <StackPanel Spacing="12">
                <TextBlock Classes="HeaderSmall" Text="Status" Margin="0,0,0,4"/>
                <TextBlock Name="ConfigStatusTextBlock"
                           Classes="SecondaryText"
                           Text="No configuration loaded. Click Settings to create or load a configuration."
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </StackPanel>
        </Border>

        <!-- Backup Controls Card -->
        <Border Grid.Row="2"
                Classes="CardStyle"
                Margin="0,0,0,24"
                Padding="24">
            <StackPanel Spacing="16">
                <TextBlock Classes="HeaderSmall" Text="Backup Controls" Margin="0,0,0,4"/>

                <!-- Start Backup Button -->
                <Button Name="StartBackupButton"
                        Classes="SuccessButton"
                        HorizontalAlignment="Stretch"
                        Height="52"
                        IsEnabled="False">
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                        <TextBlock Text="▶" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock Text="Start Backup" FontSize="15" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Compress Option -->
                <CheckBox Name="CompressDataCheckBox"
                          Classes="ModernCheckBox"
                          Content="Compress data during backup"
                          IsEnabled="False"/>
            </StackPanel>
        </Border>

        <!-- Log Section -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock Classes="HeaderSmall" Text="Activity Log"/>
        </StackPanel>

        <!-- Log Console Card -->
        <Border Grid.Row="4"
                Classes="CardStyle"
                Padding="0"
                ClipToBounds="True">
            <ScrollViewer Name="LogScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          Padding="20">
                <TextBox Name="LogTextBox"
                         IsReadOnly="True"
                         Background="Transparent"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         FontFamily="JetBrains Mono, Consolas, Courier New, monospace"
                         FontSize="13"
                         Foreground="{StaticResource TextSecondaryBrush}"
                         Padding="0"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
