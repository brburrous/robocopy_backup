<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="500"
        x:Class="NasBackupApp.Views.MainWindow"
        Title="NAS Backup Tool"
        Width="800" Height="500">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with Settings -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Current Configuration:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBlock Name="CurrentConfigTextBlock" Grid.Column="1" Text="None" VerticalAlignment="Center" FontStyle="Italic"/>
            <Button Name="SettingsButton" Grid.Column="2" Content="âš™ Settings" Width="120"/>
        </Grid>

        <!-- Configuration Status -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="15" Margin="0,0,0,15" CornerRadius="5">
            <StackPanel>
                <TextBlock Name="ConfigStatusTextBlock" Text="No configuration loaded. Click Settings to create or load a configuration." 
                           TextWrapping="Wrap" FontSize="12"/>
            </StackPanel>
        </Border>
        
        <!-- Start Backup Button with Compress Option -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <Button Name="StartBackupButton" Content="Start Backup" 
                    HorizontalAlignment="Stretch" Height="45" 
                    Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="Bold"
                    IsEnabled="False"/>
            <CheckBox Name="CompressDataCheckBox" Content="Compress data during backup" 
                      Margin="5,8,0,0" IsEnabled="False"/>
        </StackPanel>
        
        <!-- Console/Log Section -->
        <StackPanel Grid.Row="3" Margin="0,0,0,5">
            <TextBlock Text="Backup Log:" FontWeight="Bold"/>
        </StackPanel>
        
        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Background="#F5F5F5">
            <ScrollViewer Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                <TextBox Name="LogTextBox" 
                         IsReadOnly="True" 
                         Background="Transparent"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         FontFamily="Consolas,Courier New,monospace"
                         Padding="5"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
