<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="550"
        x:Class="NasBackupApp.Views.SettingsWindow"
        Title="Backup Configuration Settings"
        Width="700" Height="550"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Configuration Selector -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Configuration:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Name="ConfigurationComboBox" Grid.Column="1" MinWidth="200" Margin="0,0,10,0"/>
            <Button Name="NewConfigButton" Grid.Column="2" Content="New" Width="80" Margin="0,0,5,0"/>
            <Button Name="SaveConfigButton" Grid.Column="3" Content="Save" Width="80" Margin="0,0,5,0"/>
            <Button Name="DeleteConfigButton" Grid.Column="4" Content="Delete" Width="80"/>
        </Grid>

        <!-- Configuration Form -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- Configuration Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Configuration Name:" Margin="0,0,0,5" FontWeight="Bold"/>
                    <TextBox Name="ConfigNameTextBox" Watermark="Enter configuration name"/>
                </StackPanel>

                <!-- NAS Address -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="NAS Address:" Margin="0,0,0,5"/>
                    <TextBox Name="NasAddressTextBox" Watermark="e.g., 192.168.1.100"/>
                </StackPanel>

                <!-- Share Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Share Name:" Margin="0,0,0,5"/>
                    <TextBox Name="ShareNameTextBox" Watermark="e.g., Backups"/>
                </StackPanel>

                <!-- Source Path -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Source Path:" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Name="SourcePathTextBox" Grid.Column="0" Margin="0,0,5,0" Watermark="Select source directory..."/>
                        <Button Name="BrowseSourceButton" Grid.Column="1" Content="Browse..." Width="80"/>
                    </Grid>
                </StackPanel>

                <!-- Archive Path -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Archive Path:" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Name="ArchivePathTextBox" Grid.Column="0" Margin="0,0,5,0" Watermark="Select archive directory..."/>
                        <Button Name="BrowseArchiveButton" Grid.Column="1" Content="Browse..." Width="80"/>
                    </Grid>
                </StackPanel>

                <!-- Compress Data Checkbox -->
                <StackPanel Margin="0,0,0,15">
                    <CheckBox Name="CompressDataCheckBox" Content="Compress data during backup" Margin="0,5,0,0"/>
                    <TextBlock Text="Enable this option to compress files during the backup process (requires PowerShell script support)" 
                               FontSize="11" Foreground="Gray" Margin="25,5,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="ApplyButton" Content="Apply" Width="100" Margin="0,0,10,0"/>
            <Button Name="CloseButton" Content="Close" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
